# Frontend Environment Variables
# Copy this file to .env.local and update with your actual values

# API Configuration
REACT_APP_API_URL=http://localhost:3000/api
REACT_APP_WEBSOCKET_URL=http://localhost:3000

# Authentication
REACT_APP_JWT_SECRET=your-jwt-secret-key-here

# Database URLs (for reference - used by backend)
DATABASE_URL=postgresql://village_user:password@localhost:5432/village_db
REDIS_URL=redis://localhost:6379

# InfluxDB Configuration (for IoT sensor data)
INFLUX_URL=http://localhost:8086
INFLUX_TOKEN=your-influx-token
INFLUX_ORG=village_org
INFLUX_BUCKET=sensor_data

# MQTT Configuration (for IoT devices)
MQTT_URL=mqtt://localhost:1883
MQTT_USERNAME=village_iot
MQTT_PASSWORD=your-mqtt-password

# Blockchain Configuration
ETHEREUM_RPC_URL=http://localhost:8545
CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
CONTRACT_ABI=[{"inputs":[],"name":"example","outputs":[],"stateMutability":"nonpayable","type":"function"}]
PRIVATE_KEY=your-ethereum-private-key

# ML Service Configuration
ML_API_URL=http://localhost:5000
ML_MODEL_PATH=/models/predictive_maintenance.pkl

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,mp4,mov,avi

# SMS/WhatsApp Integration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
WHATSAPP_API_URL=https://api.whatsapp.com/send

# Voice Interface
SPEECH_API_KEY=your-speech-api-key
SPEECH_API_URL=https://speech.googleapis.com/v1/speech

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Development/Production Mode
NODE_ENV=development
REACT_APP_ENV=development

# Security
CORS_ORIGIN=http://localhost:3001
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# External Services
WEATHER_API_KEY=your-weather-api-key
MAPS_API_KEY=your-google-maps-api-key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-key
DATADOG_API_KEY=your-datadog-api-key
